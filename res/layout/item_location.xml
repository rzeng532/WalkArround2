<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/checked_radioButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:src="@drawable/icon_danxuan_nm"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"/>

    <RelativeLayout 
        android:id="@+id/desc_layout"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView android:id="@+id/title_textView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/font_size3"
            android:text="我的位置"/>
        <TextView android:id="@+id/subtitle_textView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/title_textView"
            android:textColor="@color/cor3"
            android:text="浙江海外高层次人才创新园"/>
        
        <View android:layout_height="1px" 
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            android:layout_below="@id/subtitle_textView"/>
    </RelativeLayout>
</LinearLayout>
