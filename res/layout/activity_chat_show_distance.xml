<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            layout="@layout/activity_title_common"/>

    <RelativeLayout
            android:id="@+id/rlSearching"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.example.walkarround.base.view.RippleView
                android:id="@+id/searchingView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <View
                android:id="@+id/v_fulfill_view"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        <com.example.walkarround.base.view.PortraitView
                android:id="@+id/pv_friend_portrait"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/tv_click_portrait"
                android:layout_marginBottom="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        <TextView android:id="@+id/tv_click_portrait"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_alignParentBottom="true"
                  android:layout_marginBottom="100dp"
                  android:textColor="@color/fontcor1"
                  android:textSize="@dimen/font_size2_dp" />
    </RelativeLayout>

</LinearLayout>