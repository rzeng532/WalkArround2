            android:checked="false"
            />
    </RelativeLayout>
-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecor1" />

    <!-- 清空聊天记录 -->

    <RelativeLayout
        android:id="@+id/rl_msg_detail_clear_chat_logs"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/bgcor1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="@string/msg_dialog_detail_clear_chat_records"
            android:textColor="@color/fontcor1"
            android:textSize="@dimen/font_size3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/contacts_icon_list_enter" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecor1" />
</LinearLayout>