<?xml version="1.0" encoding="utf-8"?>
<!-- 一对一聊天详情的菜单 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_chat_detail_menu_one2one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 置顶聊天 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bgcor1" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/linecor1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="@string/msg_dialog_detail_set_top"
            android:textColor="@color/fontcor1"
            android:textSize="@dimen/font_size3" />

        <com.cmri.prcs.publicaccount.util.CheckSwitchButton
            android:id="@+id/sw_set_one2one_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:checked="false"
            />
    </RelativeLayout>

    <!-- 查看友圈 -->

    <RelativeLayout
        android:id="@+id/rl_msg_detail_view_moments"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bgcor1" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/linecor1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:text="@string/msg_dialog_detail_view_friends"
            android:textColor="@color/fontcor1"
            android:textSize="@dimen/font_size3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/contacts_icon_list_enter" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecor1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="17dp"
        android:background="@color/linecor1" />

    <!-- 加入黑名单 -->
