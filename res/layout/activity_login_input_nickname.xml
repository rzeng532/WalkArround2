<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@drawable/header_title_bg">

        <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/public_icon_titlebar_back"
                android:background="@drawable/btn_pre_bg_light"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/fontcor3"
                android:text="@string/register_registe"
                android:textSize="@dimen/font_size2"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="38dp"
            >

        <ImageView
                android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:background="@color/linecor1"
                />

        <ImageView
                android:id="@+id/one_roundview"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:src="@drawable/signin_step1"
                android:background="@drawable/number_bac"
                android:layout_centerHorizontal="true"
                />

        <ImageView
                android:id="@+id/two_roundview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/signin_step2"
                android:background="@drawable/number_white_bac"
                android:layout_toRightOf="@+id/one_roundview"
                android:layout_marginLeft="40dp"
                />

        <ImageView
                android:id="@+id/three_roundview"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/signin_step3"
                android:background="@drawable/number_white_bac"
                android:layout_toRightOf="@+id/two_roundview"
                android:layout_marginLeft="40dp"
                />
    </RelativeLayout>
    <TextView
            android:id="@+id/nick_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_layout"
            android:layout_marginTop="20dp"
            android:text="@string/register_set_yournick"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_size1"
            android:textColor="@color/fontcor1"
            />

    <com.example.walkarround.base.view.EditTextWithDel
            android:id="@+id/nick_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nick_txtView"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="44dp"
            android:paddingBottom="8dp"
            android:maxLength="50"
            android:background="@drawable/edit_nickname"
            android:hint="@string/register_set_yournick"
            android:textColorHint="@color/fontcor4"
            android:textSize="@dimen/font_size3"
            android:textColor="@color/fontcor1"
            android:singleLine="true"
            android:drawableRight="@drawable/public_icon_searchbar_delete"
            />

        <Button
                android:id="@+id/btn_nextstep"
                android:layout_width="272dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nick_edit"
                android:layout_marginTop="32dp"
                android:textColor="@color/fontcor3"
                android:textSize="@dimen/font_size3"
                android:text="@string/common_next"
                android:background="@drawable/btn_nextstep"
                />
</RelativeLayout>