                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:paddingLeft="20dp"
                        android:textSize="@dimen/font_size3"
                        android:textColor="@color/fontcor1"
                        android:gravity="center_vertical"
                        android:text="@string/new_msg_notify_receive"
                        />
                <com.cmri.prcs.publicaccount.ProfileUtil.CheckSwitchButton
                        android:id="@+id/csb_new_msg_notify_receive"
                        android:layout_width="wrap_content"
