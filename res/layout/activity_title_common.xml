<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgcor1">

    <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_marginRight="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/navbar_back"/>

        <TextView
                android:id="@+id/left_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/back_iv"
                android:textSize="@dimen/font_size_title"
                android:textColor="@color/fontcor3"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/more_rl"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/right_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_title"
                android:textColor="@color/fontcor3"/>

        <ImageView
                android:id="@+id/more_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/right_tx"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/navbar_more"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/middle_rl"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/middle_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            <TextView
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/middle_iv"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/font_size9"
                    android:textColor="@color/fontcor3"/>
        </RelativeLayout>

        <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/linecor1"/>
    </RelativeLayout>