<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

    <!-- Rules -->
    <RelativeLayout
            android:id="@+id/rl_walk_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/walk_rules_bg">

        <com.example.walkarround.base.view.PortraitView
                android:id="@+id/pv_start2walk"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        <TextView android:id="@+id/tv_friend_name"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_below="@+id/pv_start2walk"
                  android:layout_marginTop="10dp"
                  android:layout_centerHorizontal="true"
                  android:text="xxx"
                  android:textColor="@color/fontcor1"
                  android:textSize="@dimen/font_size2_dp"/>

        <TextView android:id="@+id/tv_start2walk"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/tv_friend_name"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:layout_centerHorizontal="true"
                  android:gravity="center"
                  android:text="@string/walk_rule_start2walk"
                  android:textColor="@color/fontcor3"
                  android:textSize="@dimen/font_size2_dp"
                  android:background="@drawable/btn_finish_red"/>

        <TextView android:id="@+id/tv_wait_response"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/tv_friend_name"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginRight="20dp"
                  android:paddingTop="10dp"
                  android:paddingBottom="10dp"
                  android:layout_centerHorizontal="true"
                  android:gravity="center"
                  android:text="@string/walk_rule_wait_for_response"
                  android:textColor="@color/fontcor1"
                  android:textSize="@dimen/font_size2_dp"
                  android:visibility="gone"/>

        <View
                android:id="@+id/line"
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_start2walk"
                android:background="@color/transparent"/>
    </RelativeLayout>

    <!-- X button -->
    <ImageView
            android:id="@+id/iv_finish_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_delete"/>

</RelativeLayout>