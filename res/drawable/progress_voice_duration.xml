<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="270.0"
                android:centerColor="@color/bgcor1"
                android:centerY="2.0"
                android:endColor="@color/bgcor1"
                android:startColor="@color/bgcor1" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip android:gravity="center" >

        <shape>
            <corners android:radius="2.0dip" />

            <gradient
                android:angle="270.0"
                android:centerColor="@color/linecor3"
                android:centerY="2.0"
                android:endColor="@color/linecor3"
                android:startColor="@color/linecor3" />
        </shape>
        </clip>
    </item>

</layer-list>