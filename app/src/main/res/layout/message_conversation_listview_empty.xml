<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_no_conversation"
                android:background="@color/bgcor1"
                android:visibility="gone">

        <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/public_icon_limits"/>

        <TextView
                android:id="@+id/tv_why_no_conversations"
                android:layout_below="@id/iv_lock"
                android:padding="10dp"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:text="@string/why_no_sms_conversations"
                android:textSize="@dimen/font_size5"
                android:textColor="@drawable/text_color_no_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

</RelativeLayout>