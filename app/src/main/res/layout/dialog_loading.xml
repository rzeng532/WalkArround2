<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/public_corner_bg_black">
    <RelativeLayout
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:padding="10dp"
            >
        <ImageView
                android:id="@+id/ani_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:src="@drawable/public_loading"/>

        <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ani_img"
                android:layout_marginTop="10dp"
                android:text="@string/login_hint_logouting"
                android:textColor="@color/fontcor3"
                android:textSize="@dimen/size6"/>
    </RelativeLayout>
</RelativeLayout>